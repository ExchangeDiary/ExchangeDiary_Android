<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:background="@drawable/homebox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.voda.presentation.ui.main.nav.widget.TabButton
            android:id="@+id/notification_button"
            app:unselectedImage="@drawable/ic_bottom_tab_noti_unselected"
            app:selectedImage="@drawable/ic_bottom_tab_noti"
            app:layout_constraintEnd_toStartOf="@+id/home_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/bottom_tab_icon_size"
            android:layout_height="@dimen/bottom_tab_icon_size" />

        <com.voda.presentation.ui.main.nav.widget.TabButton
            android:id="@+id/home_button"
            app:unselectedImage="@drawable/ic_bottom_tab_home_unselected"
            app:selectedImage="@drawable/ic_bottom_tab_home"
            app:layout_constraintStart_toEndOf="@+id/notification_button"
            app:layout_constraintEnd_toStartOf="@+id/my_page_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/bottom_tab_icon_size"
            android:layout_height="@dimen/bottom_tab_icon_size" />

        <com.voda.presentation.ui.main.nav.widget.TabButton
            android:id="@+id/my_page_button"
            app:unselectedImage="@drawable/ic_bottom_tab_my_page_unselected"
            app:selectedImage="@drawable/ic_bottom_tab_my_page"
            app:layout_constraintStart_toEndOf="@+id/home_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/bottom_tab_icon_size"
            android:layout_height="@dimen/bottom_tab_icon_size" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>