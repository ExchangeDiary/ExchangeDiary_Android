<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.voda.presentation.ui.record.VoiceRecordViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.record.VoiceRecordFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/ic_arrow_backward"
                android:layout_marginStart="@dimen/margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/back_key_icon_size"
                android:layout_height="@dimen/back_key_icon_size"/>
            
            <com.google.android.material.button.MaterialButton
                android:background="@drawable/bg_square_radius_8dp"
                android:layout_marginEnd="@dimen/margin_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/audio_recording_page_finish_button"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="63dp"
                android:layout_height="40dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/Widget.Voda.VoiceRecordingFileText"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Untitle_210807"
            tools:text="Untitle_210807"/>

        <TextView
            style="@style/Widget.Voda.VoiceRecordingFileLengthText"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/file_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/file_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            tools:text="00:00"/>

        <FrameLayout
            android:background="@drawable/bg_circle"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@+id/file_length"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/recording_button"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/ic_voice"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
        </FrameLayout>

        <TextView
            style="@style/Widget.Voda.VoiceRecordingDescription"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/recording_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audio_recording_page_record_description"
            tools:text="@string/audio_recording_page_record_description"/>

        <ImageView
            android:background="@drawable/ic_singing_cat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="144dp"
            android:layout_height="140dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>