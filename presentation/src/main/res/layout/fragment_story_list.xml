<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.voda.presentation.ui.story.StoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray_background">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/ic_arrow_backward_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/diaryOwnerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/admin_setting"
            app:layout_constraintEnd_toStartOf="@id/invitationButton"
            app:layout_constraintTop_toTopOf="@id/backButton" />

        <ImageView
            android:id="@+id/invitationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/invitation_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/backButton" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/backButton"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dairy_hash_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blue_rounded_bg"
                    android:text="#고영희_자랑하는 일기"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/diary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="고영희\n미만 다꾸러"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/dairy_hash_tag"
                    app:layout_constraintTop_toBottomOf="@id/dairy_hash_tag" />

                <TextView
                    android:id="@+id/diary_level_desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blue_rounded_border_bg"
                    android:text="아직_0턴"
                    android:textColor="@color/text_blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/dairy_hash_tag"
                    app:layout_constraintTop_toBottomOf="@id/diary_title" />

                <TextView
                    android:id="@+id/diary_level_desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/blue_rounded_border_bg"
                    android:text="우린이제_시작하는사이"
                    android:textColor="@color/text_blue"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/diary_level_desc1"
                    app:layout_constraintTop_toTopOf="@id/diary_level_desc1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/slice_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/friendsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="23dp"
                    android:clipToPadding="true"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="@id/diary_title"
                    app:layout_constraintTop_toBottomOf="@id/diary_level_desc1"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_story_friends_circle" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/storyContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="24dp"
                    android:background="#ffffff"
                    android:clipToPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/friendsContainer"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_story_card" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>