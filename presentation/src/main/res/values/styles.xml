<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Voda" parent="@android:style/Widget.Material"/>

    <style name="Widget.Voda.Text" parent="Widget.MaterialComponents.TextView">

    </style>

    <style name="Widget.Voda.NotoRegularText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/notosans_regular</item>
    </style>

    <style name="Widget.Voda.NotoTextBold" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/notosans_bold</item>
    </style>

    <style name="Widget.Voda.VolteRegularText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/volte</item>
    </style>

    <style name="Widget.Voda.VolteTextBold" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/volte_bold</item>
    </style>

    <style name="Widget.Voda.HomeHorizontalRecyclerView" >
        <item name="android:splitMotionEvents">false</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.Voda.HomeVerticalRecyclerView" >
        <item name="android:splitMotionEvents">false</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="Widget.Voda.HomePrimaryText" parent="Widget.Voda.NotoTextBold">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Voda.HomeNormalText" parent="Widget.Voda.NotoRegularText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Voda.HomeHeader" parent="Widget.Voda.NotoTextBold">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Voda.HomeEmptyText" parent="Widget.Voda.NotoRegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_input_text</item>
    </style>

    <style name="Widget.Voda.HomeTagText" parent="Widget.Voda.NotoTextBold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="Widget.Voda.HomeVerticalRvTitle" parent="Widget.Voda.NotoTextBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Voda.HomeHorizontalItemTitle" parent="Widget.Voda.NotoTextBold">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>